{% extends "backOffice/layoutBackOffice.html.twig" %}

{% block container %}
    <h1>Liste des utilisateurs</h1>
    <table class="table table-striped table-dark">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Nom</th>
				<th scope="col">Pr√©nom</th>
				{% if is_granted("ROLE_ADMIN") %}
					<th scope="col"></th>
				{% endif %}
				<th scope="col">Infos</th>
				{% if is_granted("ROLE_ADMIN") %}
					<th scope="col">Administration</th>
				{% endif %}
			</tr>
		</thead>
        <tbody>
            {% set idTable = 0 %}
			{% for user in users %}
				{% set idTable = idTable + 1 %}
				<tr>
					<th scope="row">{{idTable}}</th>
					<td>{{ user.lastname }}</td>
                    <td>{{ user.firstname }}</td>

					{% if is_granted("ROLE_ADMIN") %}
						<td>
                            surprise
							{# <div class="modify-status">
								<a href="{{ path('async_update_status_user', { id: user.id , isUpgrade: 1 }) }}" class="buttons arrow-up" id="btn-arrow-up">
									<i class="far fa-arrow-alt-circle-up"></i>
								</a>
								<a href="{{ path('async_update_status_user', { id: user.id , isUpgrade: 0 }) }}" class="buttons arrow-down" id="btn-arrow-down">
									<i class="far fa-arrow-alt-circle-down"></i>
								</a>
							</div> #}
						</td>
					{% endif %}
					<td>
						<a href="#">
							<i class="fas fa-eye"></i>
						</a>
					</td>
					{% if is_granted("ROLE_ADMIN") %}
						<td>
							{% if user.roles[0] == "ROLE_ADMIN" %}
								Administrator
							{% else %}
								<div class="row">
									<div class="col">
										<a href="{{ path('async_up_to_admin_user', {'id' : user.id}) }}" class="btn btn-primary">
											<i class="fas fa-user-shield"></i>
										</a>
										<a href="{{ path('async_delete_user', {'id' : user.id}) }}" class="btn btn-danger">
											<i class="fas fa-trash-alt"></i>
										</a>
									</div>
								</div>
							{% endif %}
						</td>
					{% endif %}
				</tr>
			{% endfor %}
		</tbody>
    </table>
{% endblock %}