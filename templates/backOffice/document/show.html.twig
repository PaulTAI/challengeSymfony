{% extends "backOffice/layoutBackOffice.html.twig" %}

{% block title %}Document{% endblock %}

{% block container %}
    <h1>Document</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ document.filename }}</td>
            </tr>
            <tr>
                <th>UploadAt</th>
                <td>{{ document.uploadAt ? document.uploadAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ document.type }}</td>
            </tr>
            <tr>
                <th>Protected</th>
                <td>{{ document.protected }}</td>
            </tr>
            <tr>
                <th>AllowRoles</th>
                <td>{{ document.allowRoles ? document.allowRoles|json_encode : '' }}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('bo_documents') }}">back to list</a>

    <a href="{{ path('bo_document_edit', {'id': document.id}) }}">edit</a>

    {{ include('backOffice/document/_delete_form.html.twig') }}
{% endblock %}
