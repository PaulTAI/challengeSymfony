{% extends 'base.html.twig' %}

{% block title %}Document index{% endblock %}

{% block body %}
    <h1>Document index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Filename</th>
                <th>UploadAt</th>
                <th>Type</th>
                <th>Protected</th>
                <th>AllowRoles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for document in documents %}
            <tr>
                <td>{{ document.id }}</td>
                <td>{{ document.filename }}</td>
                <td>{{ document.uploadAt ? document.uploadAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ document.type }}</td>
                <td>{{ document.protected }}</td>
                <td>{{ document.allowRoles ? document.allowRoles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('bo_document_show', {'id': document.id}) }}">show</a>
                    <a href="{{ path('bo_document_edit', {'id': document.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bo_document_new') }}">Create new</a>
{% endblock %}
