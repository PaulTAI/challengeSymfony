{% extends "frontOffice/layoutFrontOffice.html.twig" %}
{% block title %}ChallengeSym - Inscription{% endblock %}
{% block container %}
<div class="sign-main">
    <div class="title">
        <h1> Inscription </h1>
    </div>
    <div class="form">
        {{ form_start(form) }}
        <div class="row g-2">
            <div class=" col-6 item">
                {{ form_row(form.firstname, {'attr' : { 'placeholder' : 'Votre prénom...'}}) }}
            </div>
            <div class=" col-6 item">
                {{ form_row(form.lastname, {'attr' : { 'placeholder' : 'Nom...'}}) }}    
            </div>
        </div>
        <div class="item">
            {{ form_row(form.email, {'attr' : { 'placeholder' : 'e.g monadresse@gmail.com...'}}) }}
        </div>
        <div class="item">
            {{ form_row(form.password, {'attr' : { 'placeholder' : 'Mot de passe...'}}) }}
        </div>
        <div class="item">
            {{ form_row(form.confirmPassword, {'attr' : { 'placeholder' : 'Renseignez le même mot de passe...'}}) }}
        </div>
        <div class="info">
            <p><i>Lorsque votre compte sera crée, il faudra attendre que celui-ci soit validé..</i></p>
        </div>
        <div class="item-cta">
            <button type="submit" class="btn btn-primary">Sign UP</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}